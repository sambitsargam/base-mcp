{
  "name": "base-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that provides onchain tools for Claude AI, allowing it to interact with the Base blockchain and Coinbase API",
  "bin": "./build/index.js",
  "scripts": {
    "run": "tsx src/index.ts",
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "test": "node scripts/test-mcp.js",
    "submit": "node scripts/submit-to-directory.js"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/base/base-mcp"
  },
  "keywords": [
    "mcp",
    "claude",
    "base",
    "blockchain",
    "coinbase",
    "ethereum",
    "web3",
    "ai"
  ],
  "author": "Dan Schlabach, Tina He",
  "license": "MIT",
  "packageManager": "yarn@4.5.1",
  "dependencies": {
    "@coinbase/coinbase-sdk": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
